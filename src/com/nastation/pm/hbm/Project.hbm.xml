<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC  
 "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<hibernate-mapping>

	<class name="com.nastation.pm.bean.Project" table="t_project"
		lazy="false">

		<id name="projectId" type="int" column="id">
			<generator class="native" />
		</id>


		<!-- unique -->
		<property name="name" type="string" column="name" not-null="true" />
		<property name="projectKey" type="string" column="project_key"
			not-null="true" />
		<property name="description" type="string" column="description" />
		<property name="url" type="string" column="url" />
		<property name="leader" type="string" column="leader" />
		<property name="createDate" type="timestamp" column="create_date" />
		
		
		<many-to-one 
			name="categoryId"
			column="category_id"
			class="com.nastation.pm.bean.ProjectCategory"
			cascade="save-update"
		/>
		
		
		<many-to-one 
			name="permissionSchemeId"
			column="permission_scheme_id"
			class="com.nastation.pm.bean.PermissionScheme"
			cascade="save-update"
		/>
		
		
		





	</class>



</hibernate-mapping>
